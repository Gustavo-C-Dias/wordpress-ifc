{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ifc-ds/accordion",
  "version": "1.0.0",
  "title": "IFC Accordion",
  "category": "ifc-design-system",
  "icon": "menu-alt3",
  "description": "Componente accordion do Design System IFC",
  "example": {},
  "supports": {
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Título do Accordion"
    },
    "items": {
      "type": "array",
      "default": [
        {
          "id": 1,
          "type": "text",
          "content": "Este é um texto de exemplo"
        },
        {
          "id": 2,
          "type": "link",
          "label": "Link de Exemplo",
          "url": "https://exemplo.com"
        }
      ]
    },
    "isOpen": {
      "type": "boolean",
      "default": false
    }
  },
  "textdomain": "ifc-design-system",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./frontend.js",
  "render": "file:./render.php"
}