{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "ifc-ds/skip-navigation",
    "version": "1.0.0",
    "title": "IFC Skip Navigation",
    "category": "ifc-design-system",
    "icon": "universal-access-alt",
    "description": "Componente de navegação para acessibilidade com links de pulo para seções principais da página.",
    "keywords": ["accessibility", "skip", "navigation", "ifc", "design-system"],
    "textdomain": "ifc-design-system",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "render": "file:./render.php",
    "attributes": {
        "links": {
            "type": "array",
            "default": [
                {
                    "id": 1,
                    "label": "Ir para o conteúdo",
                    "target": "#main",
                    "description": "Pula para o conteúdo principal da página"
                },
                {
                    "id": 2,
                    "label": "Ir para o menu",
                    "target": "nav",
                    "description": "Pula para a navegação principal"
                },
                {
                    "id": 3,
                    "label": "Ir para o rodapé",
                    "target": "footer",
                    "description": "Pula para o rodapé da página"
                }
            ]
        }
    },
    "supports": {
        "html": false,
        "align": false,
        "spacing": {
            "margin": false,
            "padding": false
        },
        "color": {
            "background": true,
            "text": false
        }
    },
    "example": {
        "attributes": {
            "isVisible": true
        }
    }
}