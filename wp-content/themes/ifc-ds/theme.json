          }
        },
        ":focus": {
          "outline": {
            "color": "var(--wp--preset--color--primary-600)",
            "style": "solid",
            "width": "2px"
          }
        }
      },
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--neutral-900)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        }
      },
