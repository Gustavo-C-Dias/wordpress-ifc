        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--sm)"
        }
      },
      "button": {
        "border": {
          "radius": "0.375rem"
        },
        "color": {
          "background": "var(--wp--preset--color--primary-600)",
          "text": "var(--wp--preset--color--neutral-0)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--3)",
            "right": "var(--wp--preset--spacing--4)",
            "bottom": "var(--wp--preset--spacing--3)", 
            "left": "var(--wp--preset--spacing--4)"
          }
        },
        "typography": {
          "fontWeight": "500"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-700)"
          }
        },
        ":focus": {
          "outline": {
            "color": "var(--wp--preset--color--primary-600)",
            "style": "solid",
            "width": "2px",
            "offset": "2px"
          }
        }
      }
    },
